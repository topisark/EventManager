<h1><%= @user.username %></h1>

<% if @user.events.empty? %>
    <p>User has no events.</p>
<% else %>
    <b>Events owned by user: </b>
    <ul>
      <% @user.events.each do |e| %>
          <li>  <%= link_to e.name, e %> </li>
      <% end %>
    </ul>
<% end %>

<% if @user.participations.empty? %>
    <p>User has not participated in anything.</p>
<% else %>
    <b>Participations: </b>
    <ul>
      <% @user.participations.each do |e| %>
          <li>  <%= link_to e.event.name, e.event %> </li>
      <% end %>
    </ul>
<% end %>